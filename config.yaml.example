# 티스토리 자동 포스팅 봇 설정
# 다중 계정 지원

# ===========================================
# 전역 설정
# ===========================================
browser:
  headless: true      # true: 브라우저 숨김 (스케줄러용), false: 브라우저 표시 (디버깅용)
  slow_motion: 100    # 동작 간 딜레이(ms)

# TMDB API (영화/드라마 정보용 - 무료)
# https://www.themoviedb.org/settings/api 에서 발급
tmdb:
  api_key: "YOUR_TMDB_API_KEY"

# ===========================================
# 계정 목록 (여러 계정 동시 관리)
# ===========================================
accounts:
  # ───────────────────────────────────────
  # 계정 1: 메인 블로그
  # ───────────────────────────────────────
  - name: "my-blog"                    # 계정 식별자
    enabled: true                       # 활성화 여부
    
    tistory:
      email: "your-email@kakao.com"    # 카카오 계정 이메일
      password: "your-password"         # 카카오 계정 비밀번호
      blog_name: "my-blog"             # 블로그 주소 (예: my-blog.tistory.com → my-blog)
    
    # 쿠팡 파트너스 (선택사항 - 없으면 쿠팡 포스팅 건너뜀)
    coupang:
      partner_id: "AF1234567"          # 쿠팡 파트너스 ID
    
    # 네이버 API (선택사항 - 없으면 생략)
    # naver:
    #   client_id: "YOUR_NAVER_CLIENT_ID"
    #   client_secret: "YOUR_NAVER_CLIENT_SECRET"
    
    # 카테고리 매핑 (콜렉터 카테고리 → 티스토리 실제 카테고리명)
    # tistory-bot categories 명령으로 확인 가능
    categories:
      "주식/코인": "주식-코인"
      "핫딜/할인": "핫딜-할인"
      "IT/테크": "IT-테크"
      "영화/드라마": "영화-드라마"
      "트렌드/실검": "트렌드-실검"
      "로또/복권": "로또-복권"
      "운세/점술": "운세-점술"
      "스포츠": "스포츠"
      "쿠팡/특가": "쿠팡-특가"
      "골프/날씨": "골프-날씨"
    
    # 자동 스케줄 설정
    schedule:
      enabled: true
      jobs:
        # 트렌드/실검 - 하루 3회
        - category: trend
          cron: "0 9,14,20 * * *"
        
        # 코인 시세 - 하루 2회
        - category: crypto
          cron: "0 10,18 * * *"
        
        # IT/테크 뉴스 - 하루 1회
        - category: tech
          cron: "0 12 * * *"
        
        # 영화 정보 - 주 2회 (월/목)
        - category: movie
          cron: "0 21 * * 1,4"
        
        # 로또 당첨번호 - 매주 토요일 22시
        - category: lotto
          cron: "0 22 * * 6"
        
        # 로또 예측번호 - 매주 금요일 10시
        - category: lotto-predict
          cron: "0 10 * * 5"
        
        # 오늘의 운세 - 매일 아침 6시
        - category: fortune
          cron: "0 6 * * *"
        
        # 스포츠 뉴스 - 매일 아침 8시
        - category: sports
          cron: "0 8 * * *"
        
        # 쿠팡 특가 - 하루 3회 💰
        - category: coupang
          cron: "0 9,13,19 * * *"
        
        # 골프 레슨 팁 + 용품 - 매일 아침 6시 🏌️
        - category: golf-tips
          cron: "0 6 * * *"
        
        # 내일 골프 날씨 예보 - 매일 오후 4시 ⛳
        - category: golf
          cron: "0 16 * * *"

  # ───────────────────────────────────────
  # 계정 2: 서브 블로그 (예시)
