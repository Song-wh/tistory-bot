# 티스토리 자동 포스팅 봇 설정

# ===========================================
# 티스토리 로그인 정보
# 카카오 계정으로 로그인합니다
# ===========================================
tistory:
  email: ""           # 카카오 계정 이메일
  password: ""        # 카카오 계정 비밀번호
  blog_name: ""       # 블로그 주소 (예: myblog.tistory.com -> myblog)

# ===========================================
# 브라우저 설정
# ===========================================
browser:
  headless: true      # true: 브라우저 숨김, false: 브라우저 표시 (디버깅용)
  slow_motion: 0      # 동작 간 딜레이(ms) - 디버깅 시 500~1000 권장

# ===========================================
# 카테고리 매핑 (티스토리 카테고리 이름)
# tistory-bot categories 명령으로 확인 가능
# ===========================================
categories:
  "주식/코인": ""      # 카테고리 이름 입력
  "핫딜/할인": ""
  "IT/테크": ""
  "영화/드라마": ""
  "트렌드/실검": ""

# ===========================================
# TMDB API (영화/드라마 정보용 - 무료)
# https://www.themoviedb.org/settings/api 에서 발급
# ===========================================
tmdb:
  api_key: ""

# ===========================================
# 네이버 API (선택사항 - 트렌드 수집용)
# https://developers.naver.com 에서 발급
# ===========================================
naver:
  client_id: ""
  client_secret: ""

# ===========================================
# 쿠팡파트너스 API (선택사항 - 핫딜용)
# https://partners.coupang.com 에서 발급
# ===========================================
coupang:
  access_key: ""
  secret_key: ""

# ===========================================
# 자동 스케줄 설정
# go run ./cmd/tistory-bot schedule 로 실행
# ===========================================
schedule:
  enabled: true
  jobs:
    - category: trend
      cron: "0 9,14,20 * * *"      # 하루 3회: 9시, 14시, 20시
    - category: crypto
      cron: "0 10,18 * * *"        # 하루 2회: 10시, 18시
    - category: tech
      cron: "0 12 * * *"           # 하루 1회: 12시
    - category: movie
      cron: "0 21 * * 1,4"         # 주 2회: 월/목 21시
