# 티스토리 자동 포스팅 봇 설정

# ===========================================
# 티스토리 API 설정
# https://www.tistory.com/guide/api/manage/register 에서 앱 등록
# ===========================================
tistory:
  client_id: ""        # 티스토리 앱 Client ID
  client_secret: ""    # 티스토리 앱 Client Secret
  redirect_uri: "http://localhost:8080/callback"
  access_token: ""     # 인증 후 발급받은 토큰
  blog_name: ""        # 블로그 주소 (예: myblog.tistory.com -> myblog)

# ===========================================
# 카테고리 매핑 (티스토리 카테고리 ID)
# tistory-bot categories 명령으로 확인 가능
# ===========================================
categories:
  "주식/코인": ""      # 카테고리 ID 입력
  "핫딜/할인": ""
  "IT/테크": ""
  "영화/드라마": ""
  "트렌드/실검": ""

# ===========================================
# TMDB API (영화/드라마 정보용 - 무료)
# https://www.themoviedb.org/settings/api 에서 발급
# ===========================================
tmdb:
  api_key: ""

# ===========================================
# 네이버 API (선택사항 - 트렌드 수집용)
# https://developers.naver.com 에서 발급
# ===========================================
naver:
  client_id: ""
  client_secret: ""

# ===========================================
# 쿠팡파트너스 API (선택사항 - 핫딜용)
# https://partners.coupang.com 에서 발급
# ===========================================
coupang:
  access_key: ""
  secret_key: ""

# ===========================================
# 자동 스케줄 설정
# ===========================================
schedule:
  enabled: false
  cron: "0 9,15,21 * * *"  # 매일 9시, 15시, 21시
  categories:
    - crypto
    - tech
    - trend

