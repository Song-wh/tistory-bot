# 티스토리 자동 포스팅 봇 설정

# ===========================================
# 티스토리 로그인 정보
# 카카오 계정으로 로그인합니다
# ===========================================
tistory:
  email: ""           # 카카오 계정 이메일
  password: ""        # 카카오 계정 비밀번호
  blog_name: ""       # 블로그 주소 (예: myblog.tistory.com -> myblog)

# ===========================================
# 브라우저 설정
# ===========================================
browser:
  headless: true      # true: 브라우저 숨김, false: 브라우저 표시 (디버깅용)
  slow_motion: 0      # 동작 간 딜레이(ms) - 디버깅 시 500~1000 권장

# ===========================================
# 카테고리 매핑 (티스토리 카테고리 이름)
# tistory-bot categories 명령으로 확인 가능
# 콜렉터의 Category -> 티스토리 실제 카테고리명
# ===========================================
categories:
  "주식/코인": ""        # 코인 시세
  "핫딜/할인": ""        # 핫딜/할인 정보
  "IT/테크": ""          # IT/테크 뉴스
  "영화/드라마": ""      # 영화 정보
  "트렌드/실검": ""      # 트렌드/실검
  "로또/복권": ""        # 로또 당첨번호
  "날씨/생활": ""        # 날씨/옷차림
  "운세/점술": ""        # 오늘의 운세
  "스포츠": ""           # 스포츠 뉴스

# ===========================================
# TMDB API (영화/드라마 정보용 - 무료)
# https://www.themoviedb.org/settings/api 에서 발급
# ===========================================
tmdb:
  api_key: ""

# ===========================================
# 네이버 API (선택사항 - 트렌드 수집용)
# https://developers.naver.com 에서 발급
# ===========================================
naver:
  client_id: ""
  client_secret: ""

# ===========================================
# 쿠팡파트너스 API (선택사항 - 핫딜용)
# https://partners.coupang.com 에서 발급
# ===========================================
coupang:
  access_key: ""
  secret_key: ""

# ===========================================
# 자동 스케줄 설정
# go run ./cmd/tistory-bot schedule 로 실행
# ===========================================
schedule:
  enabled: true
  jobs:
    # 기존 컨텐츠
    - category: trend
      cron: "0 9,14,20 * * *"      # 하루 3회: 9시, 14시, 20시
    - category: crypto
      cron: "0 10,18 * * *"        # 하루 2회: 10시, 18시
    - category: tech
      cron: "0 12 * * *"           # 하루 1회: 12시
    - category: movie
      cron: "0 21 * * 1,4"         # 주 2회: 월/목 21시
    
    # 새 컨텐츠
    - category: lotto
      cron: "0 22 * * 6"           # 매주 토요일 22시 (추첨 후)
    - category: lotto-predict
      cron: "0 10 * * 5"           # 매주 금요일 10시 (추첨 전)
    - category: weather
      cron: "0 7,17 * * *"         # 하루 2회: 아침 7시, 저녁 17시
    - category: fortune
      cron: "0 6 * * *"            # 매일 아침 6시
    - category: sports
      cron: "0 8 * * *"            # 매일 아침 8시
